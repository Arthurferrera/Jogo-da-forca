<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senaijandira.jogodaforca.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="111dp"
            android:src="@drawable/forca" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="Letras digitadas"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal"
        android:layout_marginTop="-35dp">

        <ImageView
            android:layout_width="131dp"
            android:layout_height="111dp"
            android:src="@drawable/boneco"
            android:id="@+id/img_boneco"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="A B C D E F G H A B C D E "
            android:textSize="14sp"
            android:id="@+id/txt_letras_digitadas"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Dica"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_dica"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:id="@+id/linear_palavra"
        android:layout_gravity="center_horizontal">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:text="_ _ A _ A _ H _ "
        android:textAlignment="center"
        android:id="@+id/txt_palavra"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:id="@+id/linear_botoes">
    </LinearLayout>


</LinearLayout>
